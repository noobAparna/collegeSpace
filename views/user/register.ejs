<% layout('layouts/boilerplate') %> 
<link rel="stylesheet" href="/stylesheet/register.css">
<div class="row">
    <div class="col-4"></div>
    <div class="col-4">
    <h4 class="text-center mt-5 mb-3 heading">CREATE ACCOUNT</h4>
    <div class="maindiv p-4 mb-5 rounded ">
    <form action="/register" method="POST" class="validated-form" novalidate>
        <div class="mb-3">
            <label for="fullName" class="form-label">Full Name</label>
            <input type="text" class="form-control" id="fullName" required name="fullName">
            <div class="valid-feedback">
              Looks good!
            </div>
        </div>
        <div class="mb-3">
            <label for="email" class="form-label">Email ID</label>
            <input type="email" class="form-control" id="email" required name="email">
            <div class="valid-feedback">
              Looks good!
            </div>
        </div>
        <div class="mb-4">
            <label for="password" class="form-label">Password</label>
            <input type="password" class="form-control" id="password" required name="password">
            <div class="valid-feedback">
              Looks good!
            </div>
        </div>
        <div class="d-grid gap-2 col-4 mx-auto">
            <button class="btn btn-success mb-2" type="submit">Register</button>
        </div>
    </form>
    <hr>
    <div class="text-center mb-4">
        <p>Have already an account ? <a href="/login">Login here</a></p>
    </div>
    
</div>

    </div>
    <div class="col-4"></div>
</div>
